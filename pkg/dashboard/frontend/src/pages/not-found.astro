---
import { buttonVariants } from "@/components/ui/button";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Route Not Found | Local Dashboard | Nitric">
  <main
    class="grid min-h-full place-items-center bg-white px-6 py-24 sm:py-32 lg:px-8"
  >
    <div class="text-center my-20">
      <p class="text-base font-semibold text-primary">404</p>
      <h1
        class="mt-4 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl"
      >
        Route not found
      </h1>
      <p class="mt-6 text-base leading-7 text-gray-600"></p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="/" class={buttonVariants({ variant: "default" })}>
          Go to API explorer</a
        >
      </div>
    </div>
  </main>
</Layout>
